    hs-source-dirs: src
    default-language: Haskell2010
    default-extensions: BangPatterns ConstraintKinds DataKinds
                        DeriveDataTypeable DeriveGeneric FlexibleContexts FlexibleInstances
                        FunctionalDependencies GADTs GeneralizedNewtypeDeriving LambdaCase
                        OverloadedStrings RankNTypes RecordWildCards RecursiveDo
                        ScopedTypeVariables StandaloneDeriving TemplateHaskell
                        TupleSections TypeApplications TypeFamilies TypeOperators
                        UndecidableInstances
    build-depends:
        aeson -any,
        aeson-lens -any,
        async -any,
        attoparsec >= 0.13 && < 0.14,
        base -any,
        base64-bytestring >=1 && <1.0.0.3,
        binary >=0.8 && <0.9,
        bitcoin-api >= 0.13 && < 0.14,
        bytestring >=0.10 && <0.11,
        cereal >=0.5 && <0.6,
        clay >=0.14 && <0.15,
        conduit >= 1.3 && < 1.4,
        containers >=0.6 && <0.7,
        data-default -any,
        dependent-map >= 0.3,
        dependent-sum >= 0.6,
        directory -any,
        dns >= 4.0 && < 5.0,
        ergvein-common >=1.0 && <1.1,
        ergvein-crypto >=0.1 && <0.2,
        ergvein-index-protocol >= 0.1 && < 0.2,
        ergvein-wallet-filters >= 0.2 && < 0.3,
        ergvein-wallet-native >=0.1 && <0.2,
        ergvein-wallet-types >=0.1 && <0.2,
        ergvein-wallet-version >= 0.1 && < 0.2,
        exceptions -any,
        file-embed >=0.0 && <0.1,
        filepath -any,
        ghcjs-dom -any,
        haskoin-core >= 0.12.0 && < 0.12.1,
        http-client >=0.5 && <0.7,
        immortal >= 0.3 && < 0.4,
        immortal-worker >= 0.1 && < 0.2,
        iproute >= 1.7.8 && < 1.8,
        jsaddle -any,
        lens >=4.16 && <4.18,
        lifted-base >=0.2 && <0.3,
        lmdb-simple >= 0.4 && < 0.5,
        memory >=0.14.16 && <0.15.1,
        MonadRandom -any,
        mtl >=2.2 && <2.3,
        network >= 2.8 && < 3.0,
        parsec -any,
        qrcode-core,
        random-shuffle,
        ref-tf >=0.4 && <0.5,
        reflex >=0.4 && <0.9,
        reflex-dom >=0.4 && <0.9,
        reflex-dom-core -any,
        reflex-dom-retractable -any,
        reflex-external-ref -any,
        reflex-localize -any,
        reflex-localize-dom -any,
        safe -any,
        safe-exceptions -any,
        safecopy  >= 0.9 && < 0.10,
        semialign -any,
        serialise >= 0.2 && < 0.3,
        socks >= 0.5 && < 0.7,
        split >=0.2.3.3 && <0.3,
        stm >=2.4 && <2.6,
        template-haskell -any,
        text >=1.2 && <1.3,
        these -any,
        time -any,
        unliftio >= 0.2 && < 0.3,
        unliftio-core >= 0.1 && < 0.2,
        validation >=1 && < 1.2,
        vector -any,
        vector-algorithms,
        wreq -any,
        yaml -any

    if flag(android)
        cpp-options: -DANDROID
        build-depends:
            android-activity -any,
            ergvein-wallet-android -any
    else
        build-depends:
            ergvein-wallet-desktop -any

    if flag(testnet)
        cpp-options: -DTESTNET

executable ergvein
  hs-source-dirs:
      app
  main-is:             Main.hs
  ghc-options: -O3 -threaded -rtsopts "-with-rtsopts=-N -qm"
  build-depends:
      base
    , data-default
    , directory
    , ergvein-wallet
    , ergvein-wallet-native
    , ergvein-wallet-version
    , optparse-generic  >= 1.3      && < 1.4
    , reflex
    , reflex-dom
    , text
  if flag(android)
    build-depends: ergvein-wallet-android
    cpp-options: -DANDROID
  else
    build-depends: ergvein-wallet-desktop
  default-language:    Haskell2010
  default-extensions:
    BangPatterns
    ConstraintKinds
    DataKinds
    DeriveDataTypeable
    DeriveGeneric
    FlexibleContexts
    FlexibleInstances
    FunctionalDependencies
    GADTs
    GeneralizedNewtypeDeriving
    LambdaCase
    OverloadedStrings
    RankNTypes
    RecordWildCards
    ScopedTypeVariables
    StandaloneDeriving
    TemplateHaskell
    TupleSections
    TypeApplications
    TypeFamilies
    TypeOperators
