cabal-version: >=2.0
name: ergvein-wallet
version: 0.1.0.0
synopsis: Cryptocurrency wallet with atomic swaps for desktop and Android.
description:
    See README.md
category: Cryptocurrency
build-type: Simple
extra-source-files:
    static/img/*
    static/assets/font/*

flag android
    description:
        Enable android specific features.
    default: False
    manual: True

flag testnet
  description: Build the testnet version
  default: False
  manual: True

